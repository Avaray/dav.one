---
import type { CollectionEntry } from 'astro:content';
import Head from '../components/Head.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
// import FormattedDate from '../components/FormattedDate.astro';
import ThemeWrapper from '../components/ThemeWrapper.astro';
import ThemeSwitcher from '../components/ThemeSwitcher.astro';
import MainProse from '../components/MainProse.astro';
import CopyCode from '../components/CopyCode.astro';

type Props = CollectionEntry<'articles'>['data'];

const { title, description, created, updated } = Astro.props;
---

<ThemeWrapper>
  <Head title={title} description={description} />
  <body>
    <Header />
    <MainProse>
      <CopyCode />
      <article>
        <h1 class='text-base-content/80'>
          {title}
        </h1>
        <!-- <span class='text-normal bg-primary text-base-100 font-bold p-2 border-rd-1'>
          <span>Created on</span><span
            ><FormattedDate date={created} />
            {
              updated && (
                <>
                  and updated on <FormattedDate date={updated} />
                </>
              )
            }
          </span>
        </span> -->

        <slot />
      </article>
    </MainProse>
    <ThemeSwitcher />
    <Footer />
  </body>
</ThemeWrapper>
