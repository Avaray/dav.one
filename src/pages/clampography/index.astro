---
import Head from '@components/Head.astro';
const title = 'Clampography';
const description = 'Fluid typography system based on CSS clamp() for Tailwind CSS v4';
---

<!doctype html>
<html lang='en' data-theme='dark'>
  <Head title={title} description={description} />

  <style>
    @import 'tailwindcss';
    @import 'clampography';
    @plugin "daisyui" {
      themes: light, dark, cupcake, bumblebee, emerald, corporate, synthwave, retro, cyberpunk, valentine, halloween,
        garden, forest, aqua, lofi, pastel, fantasy, wireframe, black, luxury, dracula, cmyk, autumn, business, acid,
        lemonade, night, coffee, winter, dim, nord, sunset;
      logs: false;
    }

    /* Clampography will override these fonts when loaded */
    body {
      font-family: var(--current-font, var(--font-family-base));
    }
  </style>

  <body class='bg-base-100 text-base-content transition-colors duration-300'>
    <!-- Header with Theme & Font Switchers -->
    <header class='border-b border-base-300 sticky top-0 bg-base-100/80 backdrop-blur-sm z-50'>
      <div class='max-w-5xl mx-auto px-6 py-4 flex items-center justify-between gap-4'>
        <a href='/' class='btn btn-ghost btn-sm'> ← Home </a>

        <div class='flex items-center gap-3 flex-wrap justify-end'>
          <!-- Theme Switcher -->
          <div class='flex items-center gap-2 bg-base-200 rounded-lg px-2 py-1'>
            <button id='theme-prev' class='btn btn-ghost btn-sm btn-square' aria-label='Previous theme'>
              <svg class='w-4 h-4' fill='none' viewBox='0 0 24 24' stroke='currentColor'>
                <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M15 19l-7-7 7-7'></path>
              </svg>
            </button>

            <span id='theme-name' class='capitalize text-sm font-medium min-w-20 text-center'> dark </span>

            <button id='theme-next' class='btn btn-ghost btn-sm btn-square' aria-label='Next theme'>
              <svg class='w-4 h-4' fill='none' viewBox='0 0 24 24' stroke='currentColor'>
                <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 5l7 7-7 7'></path>
              </svg>
            </button>
          </div>

          <!-- Font Switcher -->
          <div class='flex items-center gap-2 bg-base-200 rounded-lg px-2 py-1'>
            <button id='font-prev' class='btn btn-ghost btn-sm btn-square' aria-label='Previous font'>
              <svg class='w-4 h-4' fill='none' viewBox='0 0 24 24' stroke='currentColor'>
                <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M15 19l-7-7 7-7'></path>
              </svg>
            </button>

            <span id='font-name' class='text-sm font-medium min-w-24 text-center'> System </span>

            <button id='font-next' class='btn btn-ghost btn-sm btn-square' aria-label='Next font'>
              <svg class='w-4 h-4' fill='none' viewBox='0 0 24 24' stroke='currentColor'>
                <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 5l7 7-7 7'></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </header>

    <main class='max-w-3xl mx-auto px-6 py-16'>
      <!-- Hero Section -->
      <div class='mb-24 text-center'>
        <h1 class='mb-6 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent'>Clampography</h1>
        <p class='text-xl text-base-content/70 mb-8 max-w-2xl mx-auto'>
          A fluid typography system for Tailwind CSS v4. Zero stylistic opinions, pure structure. Resize your browser
          window to see the magic of CSS <code class='bg-base-200 px-2 py-1 rounded text-sm text-primary'>clamp()</code>
          in action.
        </p>
        <div class='flex gap-4 justify-center flex-wrap'>
          <a
            href='https://www.npmjs.com/package/clampography'
            target='_blank'
            class='px-6 py-3 bg-primary hover:bg-primary/90 text-primary-content font-semibold rounded-lg transition-colors shadow-lg'
          >
            View on NPM
          </a>
          <a
            href='https://github.com/yourusername/clampography'
            target='_blank'
            class='px-6 py-3 bg-neutral hover:bg-neutral/90 text-neutral-content font-semibold rounded-lg transition-colors'
          >
            GitHub
          </a>
        </div>
      </div>

      <hr class='border-base-300 mb-16' />

      <!-- Typography Scale -->
      <article>
        <h2>Typography Scale</h2>
        <p class='text-base-content/70'>
          All headings scale fluidly from mobile to desktop using <code class='bg-base-200 px-2 py-1 rounded text-sm'
            >clamp()</code
          >. No breakpoints needed.
        </p>

        <h1>Heading 1 — Main Page Title</h1>
        <h2>Heading 2 — Major Section</h2>
        <h3>Heading 3 — Subsection</h3>
        <h4>Heading 4 — Minor Heading</h4>
        <h5>Heading 5 — Rarely Used</h5>
        <h6>Heading 6 — Even Rarer</h6>

        <h2>Paragraphs & Inline Elements</h2>
        <p>
          This is a <strong>paragraph</strong> demonstrating various inline text elements. You can use <em>emphasis</em>
          for subtle stress, <b>bold text</b> for attention, and <i>italic text</i> for stylistic reasons. Technical terms
          like <dfn>clamp()</dfn>
          are defined using dfn tags.
        </p>

        <p>
          Inline code works too: <code class='bg-base-200 px-2 py-1 rounded text-sm'
            >const result = clamp(min, val, max)</code
          >. For keyboard shortcuts, use kbd: <kbd
            class='bg-base-200 border border-base-300 px-2 py-1 rounded text-sm shadow'>Ctrl</kbd
          > + <kbd class='bg-base-200 border border-base-300 px-2 py-1 rounded text-sm shadow'>C</kbd> to copy. Variables
          are styled like <var>x</var> and <var>y</var>. Sample output looks like <samp>Error 404: Not Found</samp>.
        </p>

        <p>
          Mathematical expressions use superscript and subscript: E = mc<sup>2</sup>, H<sub>2</sub>O. Abbreviations with
          tooltips:
          <abbr title='HyperText Markup Language'>HTML</abbr> and
          <abbr title='Cascading Style Sheets'>CSS</abbr>.
        </p>

        <p>
          Text can be <mark class='bg-warning/30 px-1'>highlighted</mark>, <del>deleted</del>, <ins>inserted</ins>,
          <s>struck through</s>, or <u>underlined</u>. Citations look like
          <cite>The Design of Everyday Things</cite>.
        </p>

        <p>
          <small>This is small print, typically used for legal disclaimers and fine print.</small>
        </p>

        <address class='text-base-content/70'>
          Written by John Doe<br />
          Email: <a href='mailto:john@example.com' class='text-primary underline hover:text-primary/80'
            >john@example.com</a
          ><br />
          Visit: 123 Typography Lane, Web City
        </address>

        <p>
          Current time: <time datetime='2024-11-27T14:30'>November 27, 2024 at 2:30 PM</time>
        </p>

        <h2>Links & Navigation</h2>
        <p>
          Regular links look like <a href='#' class='text-primary underline hover:text-primary/80'>this link</a>. They
          inherit color from your design system. External links to <a
            href='https://example.com'
            target='_blank'
            class='text-secondary underline hover:text-secondary/80'>example.com</a
          > work the same way.
        </p>

        <h2>Lists</h2>
        <h3>Unordered Lists</h3>
        <ul>
          <li>First item in the list</li>
          <li>Second item with some longer text to demonstrate how multi-line list items look</li>
          <li>
            Third item with a nested list:
            <ul>
              <li>Nested item A</li>
              <li>Nested item B with more content</li>
              <li>
                Deeply nested item:
                <ul>
                  <li>Level 3 item</li>
                  <li>Another level 3 item</li>
                </ul>
              </li>
            </ul>
          </li>
          <li>Final item in the main list</li>
        </ul>

        <h3>Ordered Lists</h3>
        <ol>
          <li>First step in the process</li>
          <li>Second step with detailed instructions</li>
          <li>
            Third step with substeps:
            <ol>
              <li>Substep 3.1</li>
              <li>Substep 3.2</li>
            </ol>
          </li>
          <li>Final step to completion</li>
        </ol>

        <h3>Definition Lists</h3>
        <dl>
          <dt>Clampography</dt>
          <dd>A fluid typography system based on CSS clamp() function.</dd>

          <dt>Responsive Design</dt>
          <dd>An approach to web design that makes web pages render well on a variety of devices and window sizes.</dd>

          <dt>Fluid Typography</dt>
          <dd>Typography that scales smoothly between minimum and maximum sizes based on viewport width.</dd>
          <dd>Eliminates the need for fixed breakpoints in type scales.</dd>
        </dl>

        <h2>Blockquotes</h2>
        <blockquote class='border-l-4 border-primary/50 pl-4 italic text-base-content/80'>
          <p>"Simplicity is the ultimate sophistication. Good design is as little design as possible."</p>
          <cite>— Dieter Rams</cite>
        </blockquote>

        <p>Blockquotes can be nested to show quoted replies:</p>

        <blockquote class='border-l-4 border-primary/50 pl-4 italic text-base-content/80'>
          <p>First level quote with important information.</p>
          <blockquote class='border-l-4 border-secondary/50 pl-4 mt-2'>
            <p>Nested quote showing a reply or referenced material.</p>
          </blockquote>
        </blockquote>

        <h2>Inline Quotes</h2>
        <p>
          As the saying goes, <q>practice makes perfect</q>, but remember that
          <q>perfect practice makes perfect</q> is more accurate.
        </p>

        <h2>Code Blocks</h2>
        <p>For code examples, use pre and code tags:</p>

        <pre
          class='bg-base-200 p-6 rounded-lg border border-base-300 overflow-x-auto'><code>// Install Clampography
npm install clampography

// Import in your CSS
@import "clampography";

// That's it! All elements are now styled.</code></pre>

        <p>
          Inline code like <code class='bg-base-200 px-2 py-1 rounded text-sm'>npm install</code> is styled differently from
          blocks.
        </p>

        <h2>Tables</h2>
        <div class='overflow-x-auto'>
          <table class='w-full border border-base-300'>
            <caption class='text-left font-semibold mb-2'>Clampography Feature Comparison</caption>
            <thead class='bg-base-200'>
              <tr>
                <th class='border-b border-base-300'>Feature</th>
                <th class='border-b border-base-300'>Clampography</th>
                <th class='border-b border-base-300'>Traditional</th>
              </tr>
            </thead>
            <tbody>
              <tr class='border-b border-base-300'>
                <td>Fluid Scaling</td>
                <td class='text-success'>✓ Built-in</td>
                <td class='text-error'>✗ Manual</td>
              </tr>
              <tr class='border-b border-base-300'>
                <td>Breakpoints</td>
                <td class='text-success'>✓ Not needed</td>
                <td class='text-error'>✗ Required</td>
              </tr>
              <tr>
                <td>File Size</td>
                <td class='text-success'>✓ Minimal</td>
                <td class='text-base-content/50'>~ Variable</td>
              </tr>
            </tbody>
            <tfoot class='bg-base-200/50'>
              <tr>
                <td colspan='3' class='text-sm text-base-content/60 border-t border-base-300'
                  >Data accurate as of November 2024</td
                >
              </tr>
            </tfoot>
          </table>
        </div>

        <h2>Forms & Interactive Elements</h2>
        <fieldset class='border border-base-300 rounded-lg p-6 bg-base-200/50'>
          <legend class='text-lg font-semibold px-2'>Example Form Elements</legend>
          <p>Form elements maintain consistent typography:</p>

          <p class='flex items-center gap-2'>
            Calculation result: <output
              class='px-3 py-1 bg-primary text-primary-content rounded-full text-sm font-medium'>42</output
            >
          </p>

          <p class='flex items-center gap-2'>
            Progress indicator: <progress
              class='w-full h-2 rounded-full overflow-hidden [&::-webkit-progress-bar]:bg-base-300 [&::-webkit-progress-value]:bg-primary [&::-moz-progress-bar]:bg-primary'
              value='70'
              max='100'>70%</progress
            >
          </p>

          <p class='flex items-center gap-2'>
            Meter example: <meter class='w-full h-2' value='0.7' min='0' max='1'>70%</meter>
          </p>
        </fieldset>

        <h2>Details & Summary</h2>
        <details class='border border-base-300 rounded-lg bg-base-200/50 mb-4 overflow-hidden'>
          <summary class='cursor-pointer font-medium p-4 hover:bg-base-200 transition-colors'>
            Click to expand installation instructions
          </summary>
          <div class='p-4 border-t border-base-300'>
            <p>To install Clampography, run the following command in your terminal:</p>
            <pre class='bg-base-300 p-4 rounded mt-2 overflow-x-auto'><code>npm install clampography</code></pre>
            <p class='mt-2'>Then import it in your main CSS file before your other styles.</p>
          </div>
        </details>

        <details class='border border-base-300 rounded-lg bg-base-200/50 overflow-hidden'>
          <summary class='cursor-pointer font-medium p-4 hover:bg-base-200 transition-colors'>
            Usage with Tailwind CSS v4
          </summary>
          <div class='p-4 border-t border-base-300'>
            <p>Clampography is designed specifically for Tailwind CSS v4. Simply import it in your main CSS file:</p>
            <pre
              class='bg-base-300 p-4 rounded mt-2 overflow-x-auto'><code>@import "tailwindcss";
@import "clampography";</code></pre>
          </div>
        </details>

        <h2>Media Elements</h2>
        <figure class='rounded-lg overflow-hidden bg-base-200 shadow-md'>
          <img
            src='https://images.unsplash.com/photo-1618005182384-a83a8bd57fbe?w=800&h=400&fit=crop'
            alt='Abstract gradient representing fluid design'
          />
          <figcaption class='p-4 text-sm text-base-content/70'>
            Figure 1: Responsive images scale properly within the typography system.
          </figcaption>
        </figure>

        <h2>Horizontal Rules</h2>
        <p>Use horizontal rules to separate major sections:</p>

        <hr class='border-base-300' />

        <p>Content continues after the divider.</p>

        <h2>Special Characters & Entities</h2>
        <p>Common symbols: © ® ™ • × ÷ ± ≠ ≈ ≤ ≥ → ← ↑ ↓</p>
        <p>Quotes: " " ' ' « » ‹ › „ ‚</p>
        <p>Dashes: - – — (hyphen, en dash, em dash)</p>

        <h2>Status Indicators</h2>
        <div class='flex gap-2 flex-wrap'>
          <span class='px-3 py-1 bg-primary text-primary-content rounded-full text-sm font-medium'>Primary</span>
          <span class='px-3 py-1 bg-secondary text-secondary-content rounded-full text-sm font-medium'>Secondary</span>
          <span class='px-3 py-1 bg-accent text-accent-content rounded-full text-sm font-medium'>Accent</span>
          <span class='px-3 py-1 bg-info text-info-content rounded-full text-sm font-medium'>Info</span>
          <span class='px-3 py-1 bg-success text-success-content rounded-full text-sm font-medium'>Success</span>
          <span class='px-3 py-1 bg-warning text-warning-content rounded-full text-sm font-medium'>Warning</span>
          <span class='px-3 py-1 bg-error text-error-content rounded-full text-sm font-medium'>Error</span>
        </div>
      </article>

      <!-- Footer -->
      <footer class='mt-24 pt-12 border-t border-base-300 text-center text-sm text-base-content/60'>
        <p>
          Made with ❤️ for the web typography community.
          <a href='https://github.com/yourusername/clampography' class='text-primary underline hover:text-primary/80'>
            Contribute on GitHub
          </a>
        </p>
      </footer>
    </main>

    <script>
      // Theme switcher
      const themes = [
        'light',
        'dark',
        'cupcake',
        'bumblebee',
        'emerald',
        'corporate',
        'synthwave',
        'retro',
        'cyberpunk',
        'valentine',
        'halloween',
        'garden',
        'forest',
        'aqua',
        'lofi',
        'pastel',
        'fantasy',
        'wireframe',
        'black',
        'luxury',
        'dracula',
        'cmyk',
        'autumn',
        'business',
        'acid',
        'lemonade',
        'night',
        'coffee',
        'winter',
        'dim',
        'nord',
        'sunset',
      ];

      // Font configurations with Google Fonts
      const fonts = [
        { name: 'System', family: 'system-ui, -apple-system, "Segoe UI", Roboto, sans-serif', url: null },
        {
          name: 'Inter',
          family: '"Inter", sans-serif',
          url: 'https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap',
        },
        {
          name: 'Roboto',
          family: '"Roboto", sans-serif',
          url: 'https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap',
        },
        {
          name: 'Open Sans',
          family: '"Open Sans", sans-serif',
          url: 'https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700;800&display=swap',
        },
        {
          name: 'Lato',
          family: '"Lato", sans-serif',
          url: 'https://fonts.googleapis.com/css2?family=Lato:wght@400;700;900&display=swap',
        },
        {
          name: 'Montserrat',
          family: '"Montserrat", sans-serif',
          url: 'https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700;800&display=swap',
        },
        {
          name: 'Poppins',
          family: '"Poppins", sans-serif',
          url: 'https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700;800&display=swap',
        },
        {
          name: 'Merriweather',
          family: '"Merriweather", serif',
          url: 'https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700;900&display=swap',
        },
        {
          name: 'Playfair',
          family: '"Playfair Display", serif',
          url: 'https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700;800;900&display=swap',
        },
        {
          name: 'Source Sans',
          family: '"Source Sans 3", sans-serif',
          url: 'https://fonts.googleapis.com/css2?family=Source+Sans+3:wght@400;600;700;900&display=swap',
        },
      ];

      let currentThemeIndex = themes.indexOf('dark');
      let currentFontIndex = 0;
      const loadedFonts = new Set();

      const html = document.documentElement;
      const body = document.body;
      const themeName = document.getElementById('theme-name');
      const fontName = document.getElementById('font-name');
      const themePrevBtn = document.getElementById('theme-prev');
      const themeNextBtn = document.getElementById('theme-next');
      const fontPrevBtn = document.getElementById('font-prev');
      const fontNextBtn = document.getElementById('font-next');

      // Theme functions
      function setTheme(index) {
        currentThemeIndex = index;
        const theme = themes[currentThemeIndex];
        html.setAttribute('data-theme', theme);
        if (themeName) {
          themeName.textContent = theme;
        }
      }

      // Font functions
      function loadFont(fontUrl) {
        return new Promise((resolve, reject) => {
          if (!fontUrl || loadedFonts.has(fontUrl)) {
            resolve();
            return;
          }

          const link = document.createElement('link');
          link.rel = 'stylesheet';
          link.href = fontUrl;
          link.onload = () => {
            loadedFonts.add(fontUrl);
            resolve();
          };
          link.onerror = reject;
          document.head.appendChild(link);
        });
      }

      async function setFont(index) {
        currentFontIndex = index;
        const font = fonts[currentFontIndex];

        if (fontName) {
          fontName.textContent = font.name;
        }

        // Load font if needed
        if (font.url) {
          await loadFont(font.url);
        }

        // Apply font
        document.documentElement.style.setProperty('--current-font', font.family);
      }

      // Theme event listeners
      themePrevBtn?.addEventListener('click', () => {
        const newIndex = currentThemeIndex === 0 ? themes.length - 1 : currentThemeIndex - 1;
        setTheme(newIndex);
      });

      themeNextBtn?.addEventListener('click', () => {
        const newIndex = (currentThemeIndex + 1) % themes.length;
        setTheme(newIndex);
      });

      // Font event listeners
      fontPrevBtn?.addEventListener('click', () => {
        const newIndex = currentFontIndex === 0 ? fonts.length - 1 : currentFontIndex - 1;
        setFont(newIndex);
      });

      fontNextBtn?.addEventListener('click', () => {
        const newIndex = (currentFontIndex + 1) % fonts.length;
        setFont(newIndex);
      });

      // Keyboard navigation
      document.addEventListener('keydown', (e) => {
        // Alt + Left/Right for themes
        if (e.altKey && e.key === 'ArrowLeft') {
          e.preventDefault();
          themePrevBtn?.click();
        } else if (e.altKey && e.key === 'ArrowRight') {
          e.preventDefault();
          themeNextBtn?.click();
        }
        // Ctrl + Left/Right for fonts
        else if (e.ctrlKey && e.key === 'ArrowLeft') {
          e.preventDefault();
          fontPrevBtn?.click();
        } else if (e.ctrlKey && e.key === 'ArrowRight') {
          e.preventDefault();
          fontNextBtn?.click();
        }
      });
    </script>
  </body>
</html>
