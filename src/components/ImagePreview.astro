<dialog id='preview' class='modal' onclick='preview.close()'>
  <div class='modal-box p-0 mx-auto max-w-fit'>
    <img id='modal-image' src='' alt='Your Image' class='!m-0 h-auto max-h-[95vh] w-auto max-w-[95vw] object-contain' />
  </div>
  <form method='dialog' class='modal-backdrop'>
    <button> </button>
  </form>

  <script type='module'>
    // Function to open the modal and set the clicked image as the modal content
    function openModal(imageSrc) {
      console.log(JSON.stringify(imageSrc));
      const modal = document.getElementById('preview');
      const modalImg = document.getElementById('modal-image');
      modalImg.src = imageSrc;
      modal.showModal();
    }

    document.querySelectorAll('img').forEach((img) => {
      img.addEventListener('click', () => openModal(img.src));
    });
  </script>
</dialog>
