---
import Icon from '@xtreat/astro-iconify';

interface Props {
  type?: 'success' | 'info' | 'warning' | 'error' | 'link' | 'neutral';
  icon?: 'success' | 'info' | 'warning' | 'error' | 'link' | 'neutral';
  noicon?: boolean;
}

const { type = 'info', icon: iconOverride, noicon = false } = Astro.props;

const typeMap = {
  success: {
    base: 'bg-success',
    icon: 'mdi:check-circle',
  },
  info: {
    base: 'bg-surface',
    icon: 'mdi:information-variant-circle',
  },
  warning: {
    base: 'bg-warning',
    icon: 'mdi:alert-box',
  },
  error: {
    base: 'bg-error',
    icon: 'mdi:close-circle',
  },
  link: {
    base: 'bg-info',
    icon: 'mdi:link-variant',
  },
  neutral: {
    base: 'bg-surface',
    icon: 'mdi:android-messages',
  },
};

const alertClass = `${typeMap[type].base} flex w-full items-center gap-3 my-4 rounded-xl p-[0.5em] [&_a]:text-inherit [&_a]:decoration-current`;
const icon = iconOverride ? typeMap[iconOverride].icon : typeMap[type].icon;
---

<div role='alert' class={alertClass}>
  {
    !noicon && (
      <span class='flex shrink-0 items-center'>
        <Icon icon={icon} class='size-[2em]' />
      </span>
    )
  }
  <span class='w-full'>
    <slot />
  </span>
</div>
