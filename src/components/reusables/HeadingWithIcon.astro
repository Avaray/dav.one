---
import Icon from '@xtreat/astro-iconify';

interface Props {
  icon: string;
  title: string;
  level?: 1 | 2 | 3 | 4 | 5 | 6;
  iconSize?: string; // ex. "1.5em", "2rem", "24px"
  iconClass?: string;
}

const { icon, title, level = 1, iconSize = '1.5em', iconClass = '' } = Astro.props;
const Tag = `h${level}` as any;
---

<Tag class='flex items-center gap-4'>
  <Icon class={`h-[${iconSize}] w-[${iconSize}] ${iconClass}`} icon={icon} />
  {title}
</Tag>
