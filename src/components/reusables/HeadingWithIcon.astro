---
import Icon from '@xtreat/astro-iconify';

interface Props {
  icon: string;
  title: string;
  level?: 1 | 2 | 3 | 4 | 5 | 6;
  iconClass?: string;
}

const { icon, title, level = 1, iconClass = '' } = Astro.props;
const Tag = `h${level}` as any;
---

<Tag class='flex items-center gap-4'>
  <Icon class={`h-[1.5em] w-[1.5em] ${iconClass}`} icon={icon} />
  {title}
</Tag>
