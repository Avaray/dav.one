<!doctype html>
<html lang='en' class='max-w-screen-lg mx-auto transition-colors duration-500'>
  <!-- Set the initial theme -->
  <script is:inline>
    const currentTheme = localStorage.getItem('theme') || 'dark';
    document.documentElement.setAttribute('data-theme', currentTheme);
  </script>

  <!-- Set the theme for printing -->
  <script is:inline>
    let originalTheme;
    window.addEventListener('beforeprint', () => {
      originalTheme = document.documentElement.getAttribute('data-theme');
      document.documentElement.setAttribute('data-theme', 'print');
    });
    window.addEventListener('afterprint', () => {
      if (originalTheme) document.documentElement.setAttribute('data-theme', originalTheme);
    });
  </script>

  <!-- Render the content -->
  <slot />
</html>
