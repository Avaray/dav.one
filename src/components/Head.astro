---
interface Props {
  title: string;
  description: string;
  image?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description } = Astro.props;
---

<head>
  <!-- Global Metadata -->
  <meta charset='utf-8' />
  <meta name='viewport' content='width=device-width,initial-scale=1' />
  <link rel='icon' type='image/png' href='/favicon.png' />
  <meta name='generator' content={Astro.generator} />

  <!-- Canonical URL -->
  <link rel='canonical' href={canonicalURL} />

  <!-- Primary Meta Tags -->
  <title>{title}</title>
  <meta name='title' content={title} />
  <meta name='description' content={description} />
</head>

<!-- Currently my styles are here, because TW4 won't work there. I'm not sure if this is related to PostCSS or not -->
<style is:global>
  @import 'tailwindcss';
  @plugin '@tailwindcss/typography';
  @plugin "daisyui" {
    themes:
      dark,
      light,
      forest --default;
  }

  :root {
  }

  ::selection {
    @apply text-base-100 bg-primary;
  }

  main {
    @apply prose prose-sm md:prose-base lg:prose-lg max-w-none;
  }

  main a {
    @apply text-primary font-bold tracking-wider no-underline;
  }

  main a:hover {
    @apply underline decoration-2 underline-offset-4;
  }

  blockquote {
    @apply not-italic;
    quotes: none;
  }

  code {
    @apply text-lg whitespace-normal break-words;
  }

  /* Apply nowrap if not inside <pre> */
  code:not(pre code) {
    @apply md:whitespace-nowrap;
  }

  pre {
    @apply bg-base-content/5 text-base-content/85;
  }
</style>
