---
import { Image } from 'astro:assets';

interface Props {
  images: [ImageMetadata, string][];
}

const { images } = Astro.props;
---

<!-- I wonder if I need key for mapping in this case -->
<div class='grid grid-cols-2 sm:grid-cols-4 gap-1 not-prose'>
  {images.map(([src, alt], index) => <Image src={src} alt={alt} />)}
</div>
